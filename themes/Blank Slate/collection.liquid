<h1>{{ collection.name }}</h1>
<div class="description">
  {{ collection.description | textilize }}
</div>

{% for set in collection.sets %}
  <a href="{{ set.items.first | path_with_collection: collection] }}">
    {{ set.cover | asset_tag: 'h150' }}
    <span class="title">{{ set.title }}</span>
  </a>
{% endfor %}
